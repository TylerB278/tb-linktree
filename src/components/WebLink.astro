---
const { website } = Astro.props;

---

<article title={website.title} class={website.side}>
    <a href={website.link} target="_blank"><img src={website.img}></img></a>
    <!-- <h3>{website.title}</h3> -->
</article>

<style>
    article{
        /* border: 1px solid white; */
        color: var(--color-accent);
        border-radius: 20px;
        height: 10rem;
        width: 10rem;
        margin: 0 auto;
        transition: all 0.3s;
    }

    article:hover{
        transform: scale(110%);
    }

    .left::after{
        content: attr(title);
        padding: 5px 0px;
        font-size: 20px;
        vertical-align: center;
        font-weight: 400;
        transition: padding 0.5s;
    }

    .left:hover:after {
        opacity: 100%;
        padding: 5px 30px;
        font-size: 48px;
        font-weight: 700;
        /* border: solid 1px #ddd; */
        position: absolute;
        top: 30%;
        right: 100%;
    }

    .right::after{
        content: attr(title);
        padding: 5px 0px;
        font-size: 20px;
        vertical-align: center;
        font-weight: 400;
        transition: padding 0.5s;
    }

    .right:hover:after {
        opacity: 100%;
        padding: 5px 30px;
        font-size: 48px;
        font-weight: 700;
        /* border: solid 1px #ddd; */
        position: absolute;
        top: 30%;
        left: 100%;
    }

    img{
        border-radius: 30px;
        width: fit-content;
    }
</style>